{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "settings": {
        "react":{
            "version":"detect"
        }
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "eslint:recommended"
        // "prettier",
        // "prettier/prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
        // "prettier"
        // "react-hooks"
    ],
    "rules": {
        // "prettier/prettier": "error",
        "indent": ["error", 2],
        "space-before-function-paren":"off",
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
        // "react/jsx-filename-extension": [2, { "extensions": [".tsx", ".ts", ".js", ".jsx"] }],
        // "react/prop-types": "off",
        // "react-hooks/exhaustive-deps": "warn",
        // "react/react-in-jsx-scope": "off"
    }
}

